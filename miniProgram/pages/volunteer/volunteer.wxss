/* 志愿者页面样式 */
.container {
  padding-bottom: 120rpx;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.search-input {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 志愿者统计 */
.stats-section {
  padding: 0 20rpx 20rpx;
}

.stats-card {
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 20rpx;
  padding: 30rpx;
  color: #fff;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.3);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
}

.stats-more {
  font-size: 26rpx;
  opacity: 0.8;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 快速操作 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 0 20rpx 30rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  transition: transform 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
}

.action-icon.register {
  background: linear-gradient(135deg, #ff9a9e, #fecfef);
}

.action-icon.activities {
  background: linear-gradient(135deg, #a8edea, #fed6e3);
}

.action-icon.certificate {
  background: linear-gradient(135deg, #ffecd2, #fcb69f);
}

.action-icon.ranking {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.action-icon image {
  width: 40rpx;
  height: 40rpx;
}

.action-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* 分类标签 */
.category-tabs {
  background: #fff;
  margin-bottom: 20rpx;
}

.tabs-scroll {
  white-space: nowrap;
}

.tabs-list {
  display: flex;
  padding: 20rpx;
}

.tab-item {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
  padding: 15rpx 30rpx;
  margin-right: 20rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
  color: #666;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
}

/* 推荐活动 */
.recommended-section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #667eea;
}

.recommended-scroll {
  white-space: nowrap;
}

.recommended-list {
  display: flex;
  padding: 0 20rpx;
}

.recommended-item {
  display: flex;
  flex-direction: column;
  width: 280rpx;
  margin-right: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  transition: transform 0.3s ease;
}

.recommended-item:active {
  transform: scale(0.95);
}

.recommended-image {
  width: 100%;
  height: 160rpx;
}

.recommended-content {
  padding: 20rpx;
}

.recommended-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommended-info {
  display: flex;
  flex-direction: column;
  margin-bottom: 15rpx;
}

.recommended-time,
.recommended-location {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.recommended-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  font-size: 20rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.tag.urgent {
  color: #ff4757;
  background: rgba(255, 71, 87, 0.1);
}

/* 活动列表 */
.activities-section {
  padding: 0 20rpx;
}

.filter-actions {
  display: flex;
}

.filter-btn {
  font-size: 26rpx;
  color: #667eea;
  padding: 10rpx 20rpx;
  border: 2rpx solid #667eea;
  border-radius: 20rpx;
}

.activities-list {
  display: flex;
  flex-direction: column;
}

.activity-item {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  transition: transform 0.3s ease;
}

.activity-item:active {
  transform: scale(0.98);
}

.activity-image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.activity-content {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.activity-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
}

.activity-status {
  font-size: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
}

.activity-status.recruiting {
  color: #4CAF50;
  background: rgba(76, 175, 80, 0.1);
}

.activity-status.ongoing {
  color: #ff9800;
  background: rgba(255, 152, 0, 0.1);
}

.activity-status.completed {
  color: #666;
  background: rgba(102, 102, 102, 0.1);
}

.activity-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.activity-info {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.info-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}

.info-text {
  font-size: 22rpx;
  color: #666;
}

.activity-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.organizer {
  display: flex;
  align-items: center;
}

.organizer-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.organizer-name {
  font-size: 22rpx;
  color: #666;
}

.activity-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  font-size: 22rpx;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  border: none;
  transition: all 0.3s ease;
}

.action-btn.join {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
}

.action-btn.join.joined {
  background: #e0e0e0;
  color: #666;
}

.action-btn.share {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

/* 筛选弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.filter-modal {
  width: 100%;
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  max-height: 80vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 32rpx;
  height: 32rpx;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx 40rpx;
}

.filter-group {
  margin-bottom: 40rpx;
}

.filter-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.filter-option {
  font-size: 26rpx;
  color: #666;
  background: #f8f9fa;
  padding: 15rpx 30rpx;
  border-radius: 50rpx;
  transition: all 0.3s ease;
}

.filter-option.active {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 40rpx;
  border-top: 1rpx solid #eee;
}

.btn-secondary {
  flex: 1;
  background: #f8f9fa;
  color: #666;
  border: none;
  padding: 20rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
}

.btn-primary {
  flex: 1;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
  border: none;
  padding: 20rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 140rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.4);
  z-index: 999;
}

.fab image {
  width: 48rpx;
  height: 48rpx;
}

/* 加载更多 */
.load-more {
  padding: 40rpx;
  text-align: center;
}

.load-more-btn {
  color: #667eea;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-action {
  display: flex;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #666;
}