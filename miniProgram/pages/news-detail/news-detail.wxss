/* 社区动态详情页样式 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: #666;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e0e0e0;
  border-top: 4rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  padding: 40rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.retry-btn {
  background-color: #1890ff;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 新闻容器 */
.news-container {
  background-color: white;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 新闻头部 */
.news-header {
  padding: 0 0 40rpx 0;
}

/* 新闻图片 */
.news-image-container {
  width: 100%;
  height: 400rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.news-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 新闻标题 */
.news-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin: 0 40rpx 30rpx;
}

/* 新闻标签 */
.news-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin: 0 40rpx 30rpx;
}

.tag-item {
  background-color: #e6f7ff;
  border: 2rpx solid #91d5ff;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
}

.tag-text {
  font-size: 24rpx;
  color: #1890ff;
}

/* 新闻元信息 */
.news-meta {
  padding: 0 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
  padding-bottom: 30rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  margin-bottom: 12rpx;
}

.meta-label {
  color: #666;
  margin-right: 8rpx;
  min-width: 120rpx;
}

.meta-value {
  color: #333;
  flex: 1;
}

.meta-stats {
  display: flex;
  gap: 30rpx;
  margin-top: 20rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #999;
}

/* 新闻正文 */
.news-body {
  padding: 40rpx;
  line-height: 1.8;
  font-size: 30rpx;
  color: #333;
}

/* rich-text 内容样式 */
.news-body rich-text {
  word-break: break-all;
}

/* rich-text 内容样式 */
.news-content {
  line-height: 1.8;
}

.news-content p {
  margin: 20rpx 0;
  text-indent: 2em;
}

.news-content h3 {
  font-size: 32rpx;
  font-weight: bold;
  color: #1890ff;
  margin: 40rpx 0 20rpx 0;
  padding-left: 20rpx;
  border-left: 6rpx solid #1890ff;
}

.news-content ul {
  margin: 20rpx 0;
  padding-left: 40rpx;
}

.news-content li {
  margin: 12rpx 0;
  list-style-type: disc;
}

.news-content strong {
  font-weight: bold;
  color: #333;
}

/* 操作按钮 */
.news-actions {
  padding: 30rpx 40rpx;
  border-top: 2rpx solid #f0f0f0;
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  min-width: 160rpx;
  position: relative;
}

.like-btn {
  background-color: #f0f0f0;
  color: #666;
}

.like-btn.liked {
  background-color: #fff0f6;
  color: #eb2f96;
}

.share-btn {
  background-color: #1890ff;
  color: white;
}

.btn-icon {
  margin-right: 8rpx;
  font-size: 32rpx;
}

.btn-text {
  font-size: 28rpx;
}

.btn-count {
  font-size: 24rpx;
  margin-left: 8rpx;
}

/* 相关新闻 */
.related-news {
  margin: 20rpx;
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx 40rpx 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.related-list {
  padding: 0 40rpx 20rpx;
}

.related-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f8f8f8;
  position: relative;
}

.related-item:last-child {
  border-bottom: none;
}

.related-image {
  width: 120rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  object-fit: cover;
}

.related-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
}

.related-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.related-time {
  font-size: 24rpx;
  color: #999;
}

.related-arrow {
  font-size: 28rpx;
  color: #ccc;
}

.related-item:active {
  background-color: #f8f8f8;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .news-container {
    margin: 10rpx;
  }
  
  .news-title {
    font-size: 32rpx;
    margin: 0 30rpx 30rpx;
  }
  
  .news-tags {
    margin: 0 30rpx 30rpx;
  }
  
  .news-meta {
    padding: 0 30rpx;
  }
  
  .news-body {
    padding: 30rpx;
  }
  
  .news-actions {
    padding: 30rpx;
  }
}