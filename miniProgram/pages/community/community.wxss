/* 服务订单页面样式 */
@import "../../styles/search-bar.wxss";

.container {
  padding-bottom: 120rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 分类标签 */
.category-tabs {
  background: #fff;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.tabs-scroll {
  white-space: nowrap;
  overflow-x: auto;
}

.tabs-list {
  display: flex;
  padding: 15rpx 20rpx;
}

.tab-item {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 100rpx;
  padding: 12rpx 24rpx;
  margin-right: 15rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
  background: #f8f9fa;
  transition: all 0.3s ease;
  white-space: nowrap;
  flex-shrink: 0;
}

.tab-item.active {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: #fff;
}

/* 服务订单列表 */
.service-records-list {
  padding: 0 20rpx;
}

.service-record-item {
  background: #fff;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  transition: transform 0.3s ease;
}

.service-record-item:active {
  transform: scale(0.98);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.record-info {
  flex: 1;
}

.elderly-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.record-id {
  font-size: 24rpx;
  color: #999;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #fff;
  font-weight: bold;
}

.status-pending {
  background: #ffc107;
}

.status-completed {
  background: #28a745;
}

.status-cancelled {
  background: #dc3545;
}

.status-processing {
  background: #007bff;
}

.record-content {
  margin-bottom: 20rpx;
}

.content-row {
  display: flex;
  margin-bottom: 12rpx;
  align-items: flex-start;
}

.content-row:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 26rpx;
  color: #666;
  min-width: 140rpx;
  flex-shrink: 0;
}

.value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

.value.price {
  color: #ff6b35;
  font-weight: bold;
}

.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.create-time {
  font-size: 24rpx;
  color: #999;
}

.action-btn {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 加载更多 */
.load-more {
  padding: 40rpx 20rpx;
  text-align: center;
}

.load-more-btn {
  background: #f8f9fa;
  color: #666;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
  border: 1rpx solid #e9ecef;
  display: inline-block;
}

.load-more-btn:active {
  background: #e9ecef;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
  display: block;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #666;
}