/* 首页样式 */

/* 简约顶部区域 */
.header-section {
  padding: 30rpx 0;
  margin-bottom: 30rpx;
}

.greeting {
  text-align: center;
}

.greeting-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

/* 服务网格 */
.service-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.service-item:active {
  background: #e9ecef;
  transform: scale(0.95);
}

.service-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 16rpx;
}

.service-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* 提醒列表 */
.reminder-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.reminder-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #4A90E2;
}

.reminder-time {
  font-size: 24rpx;
  color: #4A90E2;
  font-weight: 600;
  min-width: 100rpx;
  margin-right: 20rpx;
}

.reminder-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.reminder-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.reminder-desc {
  font-size: 24rpx;
  color: #666;
}

.reminder-status {
  margin-left: 20rpx;
}

/* 健康概览 */
.health-overview {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.health-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.health-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.health-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.health-trend {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #e3f2fd;
  border-radius: 12rpx;
  color: #1976d2;
}

.trend-text {
  font-size: 28rpx;
}

.trend-arrow {
  font-size: 24rpx;
  font-weight: 600;
}

/* 新闻列表 */
.news-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.news-item {
  display: flex;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.news-image {
  width: 120rpx;
  height: 90rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.news-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.news-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.news-summary {
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 8rpx;
}

.news-time {
  font-size: 22rpx;
  color: #999;
}

.more-news {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  color: #4A90E2;
  font-size: 28rpx;
}

.arrow {
  font-weight: 600;
}

/* 联系人列表 */
.contact-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.contact-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.contact-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.contact-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.contact-relation {
  font-size: 24rpx;
  color: #666;
}

.contact-phone {
  font-size: 28rpx;
  color: #4A90E2;
  font-weight: 500;
}

/* 老年人关注信息样式 */
.info-categories {
  display: flex;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
}

.category-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 8rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.category-item.active {
  background: #4A90E2;
  color: white;
}

.category-item text {
  font-size: 26rpx;
  font-weight: 500;
}

.info-content {
  margin-top: 20rpx;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.info-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.info-badge {
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.badge-text {
  background: #4A90E2;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.info-main {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.info-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.info-summary {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.info-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-source {
  font-size: 22rpx;
  color: #4A90E2;
  font-weight: 500;
}

.info-time {
  font-size: 22rpx;
  color: #999;
}

.info-arrow {
  margin-left: 16rpx;
  font-size: 32rpx;
  color: #ccc;
  font-weight: 300;
}