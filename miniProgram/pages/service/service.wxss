/* pages/service/service.wxss */

.service-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
  text-align: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  display: block;
}

/* 搜索栏 */
.search-section {
  background: white;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-box {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 50rpx;
  padding: 0 20rpx;
  height: 70rpx;
}

.search-icon {
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  height: 100%;
}

.search-btn {
  background: #667eea;
  color: white;
  padding: 15rpx 25rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  margin-left: 15rpx;
}

/* 筛选标签 */
.filter-section {
  background: white;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.filter-scroll {
  white-space: nowrap;
  padding: 0 30rpx;
}

.filter-item {
  display: inline-block;
  padding: 15rpx 30rpx;
  margin-right: 20rpx;
  background: #f8f9fa;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.filter-item.active {
  background: #667eea;
  color: white;
}

/* 加载状态 */
.loading-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* 机构列表 */
.organization-list {
  padding: 0 30rpx;
}

.organization-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.organization-card:active {
  transform: scale(0.98);
}

/* 机构头部 */
.org-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.org-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.org-type {
  display: inline-block;
  background: #e3f2fd;
  color: #1976d2;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  white-space: nowrap;
}

/* 机构详细信息 */
.org-details {
  margin-bottom: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.detail-icon {
  margin-right: 10rpx;
}

.detail-text {
  font-size: 24rpx;
  color: #666;
  flex: 1;
}

.detail-text.price {
  color: #ff6b35;
  font-weight: bold;
}

/* 服务标签 */
.service-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 25rpx;
}

.service-tag {
  background: #f0f8ff;
  color: #4a90e2;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  margin-right: 15rpx;
  margin-bottom: 10rpx;
  border: 1rpx solid #e1f0ff;
}

/* 操作按钮 */
.org-actions {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  font-size: 26rpx;
  border: none;
  transition: all 0.3s ease;
}

.archive-btn {
  background: #667eea;
  color: white;
}

.archive-btn:active {
  background: #5a6fd8;
}

.staff-btn {
  background: #52c41a;
  color: white;
}

.staff-btn:active {
  background: #389e0d;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.refresh-btn {
  background: #667eea;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  border: none;
}

/* 底部提示 */
.footer-tip {
  text-align: center;
  padding: 30rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .org-name {
    font-size: 30rpx;
  }
  
  .organization-card {
    padding: 25rpx;
  }
  
  .org-actions {
    flex-direction: column;
    gap: 15rpx;
  }
}