/* 设备详情页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  padding: 40rpx;
}

.error-icon {
  font-size: 80rpx;
  color: #ff4757;
  margin-bottom: 20rpx;
}

.error-text {
  color: #666;
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.retry-btn {
  background-color: #007aff;
  color: white;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 设备信息卡片 */
.device-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.device-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.device-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #007aff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.device-icon text {
  color: white;
  font-size: 32rpx;
}

.device-title {
  flex: 1;
}

.device-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.device-type {
  font-size: 24rpx;
  color: #666;
}

.device-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.status-online {
  background-color: #e8f5e8;
  color: #52c41a;
}

.status-offline {
  background-color: #fff2f0;
  color: #ff4d4f;
}

.status-connecting {
  background-color: #e6f7ff;
  color: #1890ff;
}

/* 设备详细信息 */
.device-info {
  margin-top: 30rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 状态信息卡片 */
.status-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.status-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.status-grid {
  display: flex;
  gap: 30rpx;
}

.status-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.status-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.battery-icon {
  color: #52c41a;
}

.signal-icon {
  color: #1890ff;
}

.status-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.status-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 健康数据卡片 */
.health-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.health-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.health-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.health-item:last-child {
  border-bottom: none;
}

.health-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: white;
}

.icon-blood-pressure {
  background-color: #ff4757;
}

.icon-blood-sugar {
  background-color: #ffa502;
}

.icon-heart {
  background-color: #ff6b6b;
}

.icon-temperature {
  background-color: #5f27cd;
}

.health-info {
  flex: 1;
}

.health-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.health-value {
  font-size: 24rpx;
  color: #666;
}

.health-status {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.status-normal {
  background-color: #e8f5e8;
  color: #52c41a;
}

.status-high {
  background-color: #fff2f0;
  color: #ff4d4f;
}

.status-low {
  background-color: #e6f7ff;
  color: #1890ff;
}

/* 操作按钮 */
.action-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  border: none;
}

.connect-btn {
  background-color: #52c41a;
  color: white;
}

.disconnect-btn {
  background-color: #ff4d4f;
  color: white;
}

.refresh-btn {
  background-color: #1890ff;
  color: white;
}

.action-btn:active {
  opacity: 0.8;
}

/* 更新时间 */
.update-time {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin-top: 20rpx;
  padding: 20rpx;
}

/* 空状态 */
.empty-health {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .container {
    padding: 15rpx;
  }
  
  .device-card,
  .status-card,
  .health-card,
  .action-card {
    padding: 20rpx;
  }
  
  .device-name {
    font-size: 30rpx;
  }
  
  .status-title,
  .health-title {
    font-size: 30rpx;
  }
}