/* pages/service-staff/service-staff.wxss */
@import "../../styles/search-bar.wxss";

.service-staff-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
  display: block;
}

/* 加载状态 */
.loading-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 30rpx;
  color: #999;
  font-size: 28rpx;
}

/* 服务人员列表 */
.staff-list {
  padding: 0 30rpx;
}

.staff-card {
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.staff-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 服务人员头部信息 */
.staff-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.staff-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  border: 4rpx solid #f0f0f0;
}

.staff-info {
  flex: 1;
}

.staff-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.staff-position {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.staff-specialty {
  font-size: 24rpx;
  color: #999;
}

.staff-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.staff-status.active {
  background-color: #e8f5e8;
  color: #52c41a;
}

.staff-status.inactive {
  background-color: #fff2e8;
  color: #fa8c16;
}

/* 服务人员详细信息 */
.staff-details {
  margin-bottom: 30rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.detail-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.detail-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.detail-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.detail-value.rating {
  color: #ff9500;
}

.staff-description {
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 操作按钮 */
.staff-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.call-btn {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
}

.detail-btn {
  background-color: #f0f0f0;
  color: #666;
}

.action-btn:active {
  opacity: 0.8;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.3;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.refresh-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  border: none;
}

/* 加载更多 */
.load-more {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.load-more-text {
  font-size: 26rpx;
  color: #999;
}

/* 底部提示 */
.footer-tip {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.tip-text {
  font-size: 24rpx;
  color: #ccc;
}