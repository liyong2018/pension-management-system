/* 机构详情页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  padding: 40rpx;
}

.error-icon {
  font-size: 80rpx;
  color: #ff4757;
  margin-bottom: 20rpx;
}

.error-text {
  color: #666;
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.retry-btn {
  background-color: #007aff;
  color: white;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
}

/* 机构详情内容 */
.organization-detail {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 头部卡片 */
.header-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.org-header {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.org-avatar {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.org-initial {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

.org-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.org-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.2;
}

.org-type {
  font-size: 26rpx;
  color: #666;
}

.org-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 8rpx;
}

.rating-stars {
  color: #ffa500;
  font-size: 24rpx;
}

.rating-score {
  font-size: 24rpx;
  color: #666;
}

.org-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.org-status.active {
  background-color: #e8f5e8;
  color: #52c41a;
}

.org-status.inactive {
  background-color: #fff2f0;
  color: #ff4d4f;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.org-status.active .status-dot {
  background-color: #52c41a;
}

.org-status.inactive .status-dot {
  background-color: #ff4d4f;
}

/* 信息卡片 */
.info-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 联系信息 */
.contact-info {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.contact-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  flex-shrink: 0;
}

.contact-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.contact-label {
  font-size: 24rpx;
  color: #666;
}

.contact-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 地址信息 */
.address-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.address-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 16rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.address-content {
  flex: 1;
}

.address-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.map-btn {
  background-color: #007aff;
  color: white;
  border-radius: 8rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border: none;
  margin-top: 12rpx;
}

/* 服务信息 */
.services-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.service-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.service-tag {
  background-color: #e6f7ff;
  color: #1890ff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: 1rpx solid #91d5ff;
}

.service-hours {
  background-color: #f8f9fa;
  padding: 16rpx;
  border-radius: 12rpx;
}

.hours-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.hours-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 描述信息 */
.description-info {
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
}

.description-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  border: none;
}

.primary-btn {
  background-color: #007aff;
  color: white;
}

.secondary-btn {
  background-color: #f8f9fa;
  color: #333;
  border: 1rpx solid #e0e0e0;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .org-header {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  
  .action-buttons {
    flex-direction: column;
  }
}