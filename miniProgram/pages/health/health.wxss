/* 健康管理页面样式 */
.container {
  padding-bottom: 120rpx;
}

/* 健康概览 */
.health-overview {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  color: #fff;
}

.overview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.overview-title {
  font-size: 32rpx;
  font-weight: bold;
}

.overview-date {
  font-size: 24rpx;
  opacity: 0.8;
}

.overview-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.overview-item {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 15rpx;
  padding: 20rpx;
  backdrop-filter: blur(10rpx);
  transition: transform 0.3s ease;
}

.overview-item:active {
  transform: scale(0.95);
}

.overview-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 15rpx;
}

.overview-icon image {
  width: 100%;
  height: 100%;
}

.overview-content {
  display: flex;
  flex-direction: column;
}

.overview-label {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 5rpx;
}

.overview-value {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.overview-unit {
  font-size: 20rpx;
  opacity: 0.7;
  margin-bottom: 10rpx;
}

.overview-status {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  text-align: center;
  align-self: flex-start;
}

.overview-status.normal {
  background: rgba(76, 175, 80, 0.3);
  color: #4CAF50;
}

.overview-status.warning {
  background: rgba(255, 152, 0, 0.3);
  color: #ff9800;
}

.overview-status.danger {
  background: rgba(244, 67, 54, 0.3);
  color: #f44336;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  background: #fff;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: transform 0.3s ease;
}

.action-item:active {
  transform: scale(0.9);
}

.action-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
}

.action-icon.record {
  background: linear-gradient(135deg, #ff6b6b, #ee5a52);
}

.action-icon.device {
  background: linear-gradient(135deg, #4ecdc4, #44a08d);
}

.action-icon.report {
  background: linear-gradient(135deg, #45b7d1, #96c93d);
}

.action-icon.medication {
  background: linear-gradient(135deg, #f093fb, #f5576c);
}

.action-icon image {
  width: 32rpx;
  height: 32rpx;
}

.action-text {
  font-size: 24rpx;
  color: #333;
}

/* 图表区域 */
.chart-tabs {
  display: flex;
}

.chart-tab {
  font-size: 24rpx;
  color: #666;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  margin-left: 10rpx;
  transition: all 0.3s ease;
}

.chart-tab.active {
  background: #4CAF50;
  color: #fff;
}

.chart-container {
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20rpx 0;
}

.chart-placeholder {
  width: 100%;
  height: 100%;
}

.chart-placeholder image {
  width: 100%;
  height: 100%;
}

.chart-summary {
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
}

.summary-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 用药提醒 */
.medication-list {
  display: flex;
  flex-direction: column;
}

.medication-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  transition: opacity 0.3s ease;
}

.medication-item:last-child {
  border-bottom: none;
}

.medication-item.taken {
  opacity: 0.5;
}

.medication-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.medication-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.medication-dosage {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.medication-time {
  font-size: 22rpx;
  color: #999;
}

.medication-status {
  width: 48rpx;
  height: 48rpx;
}

.status-icon {
  width: 100%;
  height: 100%;
}

/* 健康建议 */
.suggestions-list {
  display: flex;
  flex-direction: column;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.suggestion-icon.diet {
  background: linear-gradient(135deg, #ff9a9e, #fecfef);
}

.suggestion-icon.exercise {
  background: linear-gradient(135deg, #a8edea, #fed6e3);
}

.suggestion-icon.sleep {
  background: linear-gradient(135deg, #d299c2, #fef9d7);
}

.suggestion-icon.medical {
  background: linear-gradient(135deg, #89f7fe, #66a6ff);
}

.suggestion-icon image {
  width: 24rpx;
  height: 24rpx;
}

.suggestion-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.suggestion-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.suggestion-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 历史记录 */
.records-list {
  display: flex;
  flex-direction: column;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  transition: background-color 0.3s ease;
}

.record-item:last-child {
  border-bottom: none;
}

.record-item:active {
  background-color: #f8f9fa;
}

.record-date {
  width: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
}

.record-day {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.record-month {
  font-size: 20rpx;
  color: #999;
}

.record-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-type {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.record-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 5rpx;
}

.record-time {
  font-size: 22rpx;
  color: #999;
}

.record-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.record-status.normal {
  background: rgba(76, 175, 80, 0.1);
  color: #4CAF50;
}

.record-status.warning {
  background: rgba(255, 152, 0, 0.1);
  color: #ff9800;
}

.record-status.danger {
  background: rgba(244, 67, 54, 0.1);
  color: #f44336;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 140rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.4);
  z-index: 999;
}

.fab image {
  width: 48rpx;
  height: 48rpx;
}

/* 设备管理页面样式 */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏 */
.search-section {
  background: #fff;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #f8f8f8;
  border-radius: 24rpx;
  padding: 16rpx 24rpx;
  gap: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 过滤标签 */
.filter-section {
  background: #fff;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-tags {
  display: inline-flex;
  padding: 0 24rpx;
  gap: 16rpx;
}

.filter-tag {
  display: inline-block;
  padding: 12rpx 24rpx;
  background: #f8f8f8;
  color: #666;
  border-radius: 32rpx;
  font-size: 26rpx;
  white-space: nowrap;
  transition: all 0.3s;
}

.filter-tag.active {
  background: #4A90E2;
  color: #fff;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #4A90E2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* 设备列表 */
.device-list {
  padding: 24rpx;
}

/* 设备类型分组 */
.device-type-group {
  margin-bottom: 32rpx;
}

.type-group-header {
  margin-bottom: 16rpx;
}

.type-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, #E3F2FD 0%, #F3E5F5 100%);
  border-radius: 12rpx;
  border-left: 4rpx solid #1976D2;
}

.type-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1976D2;
}

.type-count {
  font-size: 24rpx;
  color: #666;
  margin-left: auto;
}

.type-device-list {
  padding-left: 16rpx;
}

.device-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.device-card:active {
  transform: scale(0.98);
}

/* 设备头部 */
.device-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.device-info {
  flex: 1;
}

.device-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.device-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #ccc;
}

.device-status.online .status-dot {
  background: #2ED573;
}

.device-status.offline .status-dot {
  background: #FF6B6B;
}

.status-text {
  font-size: 24rpx;
  color: #666;
}

.device-type-badge {
  background: #E3F2FD;
  color: #1976D2;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
}

/* 设备详情 */
.device-details {
  margin-bottom: 24rpx;
}

.detail-item {
  display: flex;
  margin-bottom: 12rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  width: 140rpx;
  font-size: 26rpx;
  color: #999;
  flex-shrink: 0;
}

.detail-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

/* 设备操作 */
.device-actions {
  display: flex;
  gap: 16rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 24rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  transition: all 0.3s;
}

.action-btn.primary {
  background: #4A90E2;
  color: #fff;
}

.action-btn.secondary {
  background: #f8f8f8;
  color: #666;
}

.action-btn.danger {
  background: #FF6B6B;
  color: #fff;
}

.action-btn:active {
  opacity: 0.8;
  transform: scale(0.95);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
  text-align: center;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  margin: 24rpx 0 12rpx;
  font-weight: 600;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
  margin-bottom: 48rpx;
}

.empty-action {
  width: 100%;
}

.connect-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: #4A90E2;
  color: #fff;
  border: none;
  border-radius: 24rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
}

/* 底部提示 */
.footer-tips {
  text-align: center;
  padding: 48rpx 24rpx;
}

.tips-text {
  font-size: 24rpx;
  color: #999;
}