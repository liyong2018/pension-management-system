/* 健康管理页面样式 */
.container {
  padding-bottom: 120rpx;
}

/* 健康概览 */
.health-overview {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  color: #fff;
}

.overview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.overview-title {
  font-size: 32rpx;
  font-weight: bold;
}

.overview-date {
  font-size: 24rpx;
  opacity: 0.8;
}

.overview-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.overview-item {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 15rpx;
  padding: 20rpx;
  backdrop-filter: blur(10rpx);
  transition: transform 0.3s ease;
}

.overview-item:active {
  transform: scale(0.95);
}

.overview-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 15rpx;
}

.overview-icon image {
  width: 100%;
  height: 100%;
}

.overview-content {
  display: flex;
  flex-direction: column;
}

.overview-label {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 5rpx;
}

.overview-value {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.overview-unit {
  font-size: 20rpx;
  opacity: 0.7;
  margin-bottom: 10rpx;
}

.overview-status {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  text-align: center;
  align-self: flex-start;
}

.overview-status.normal {
  background: rgba(76, 175, 80, 0.3);
  color: #4CAF50;
}

.overview-status.warning {
  background: rgba(255, 152, 0, 0.3);
  color: #ff9800;
}

.overview-status.danger {
  background: rgba(244, 67, 54, 0.3);
  color: #f44336;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  background: #fff;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: transform 0.3s ease;
}

.action-item:active {
  transform: scale(0.9);
}

.action-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
}

.action-icon.record {
  background: linear-gradient(135deg, #ff6b6b, #ee5a52);
}

.action-icon.device {
  background: linear-gradient(135deg, #4ecdc4, #44a08d);
}

.action-icon.report {
  background: linear-gradient(135deg, #45b7d1, #96c93d);
}

.action-icon.medication {
  background: linear-gradient(135deg, #f093fb, #f5576c);
}

.action-icon image {
  width: 32rpx;
  height: 32rpx;
}

.action-text {
  font-size: 24rpx;
  color: #333;
}

/* 图表区域 */
.chart-tabs {
  display: flex;
}

.chart-tab {
  font-size: 24rpx;
  color: #666;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  margin-left: 10rpx;
  transition: all 0.3s ease;
}

.chart-tab.active {
  background: #4CAF50;
  color: #fff;
}

.chart-container {
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20rpx 0;
}

.chart-placeholder {
  width: 100%;
  height: 100%;
}

.chart-placeholder image {
  width: 100%;
  height: 100%;
}

.chart-summary {
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
}

.summary-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 用药提醒 */
.medication-list {
  display: flex;
  flex-direction: column;
}

.medication-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  transition: opacity 0.3s ease;
}

.medication-item:last-child {
  border-bottom: none;
}

.medication-item.taken {
  opacity: 0.5;
}

.medication-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.medication-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.medication-dosage {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.medication-time {
  font-size: 22rpx;
  color: #999;
}

.medication-status {
  width: 48rpx;
  height: 48rpx;
}

.status-icon {
  width: 100%;
  height: 100%;
}

/* 健康建议 */
.suggestions-list {
  display: flex;
  flex-direction: column;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.suggestion-icon.diet {
  background: linear-gradient(135deg, #ff9a9e, #fecfef);
}

.suggestion-icon.exercise {
  background: linear-gradient(135deg, #a8edea, #fed6e3);
}

.suggestion-icon.sleep {
  background: linear-gradient(135deg, #d299c2, #fef9d7);
}

.suggestion-icon.medical {
  background: linear-gradient(135deg, #89f7fe, #66a6ff);
}

.suggestion-icon image {
  width: 24rpx;
  height: 24rpx;
}

.suggestion-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.suggestion-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.suggestion-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 历史记录 */
.records-list {
  display: flex;
  flex-direction: column;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  transition: background-color 0.3s ease;
}

.record-item:last-child {
  border-bottom: none;
}

.record-item:active {
  background-color: #f8f9fa;
}

.record-date {
  width: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
}

.record-day {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.record-month {
  font-size: 20rpx;
  color: #999;
}

.record-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-type {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.record-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 5rpx;
}

.record-time {
  font-size: 22rpx;
  color: #999;
}

.record-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.record-status.normal {
  background: rgba(76, 175, 80, 0.1);
  color: #4CAF50;
}

.record-status.warning {
  background: rgba(255, 152, 0, 0.1);
  color: #ff9800;
}

.record-status.danger {
  background: rgba(244, 67, 54, 0.1);
  color: #f44336;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 140rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.4);
  z-index: 999;
}

.fab image {
  width: 48rpx;
  height: 48rpx;
}